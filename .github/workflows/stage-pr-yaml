name: Deploy PR branches
on:
  issuse_comment:
    types: [opened, edited, synchronize, reopened]
    branches:
      - main
  pull_request_target:
    types: [opened, edited, synchronize, reopened]
    branches:
      - main
  pull_request:
    types: [opened, edited, synchronize, reopened]
    branches:
      - main

concurrency:
  group: ${{ github.workflow }}-${{ github.ref}}

  cancel-in-progress: true

jobs:
  trigger-pr-branch-deploy:
    runs-on: ubuntu-latest
    permissions:
      pull-requests: write
    steps:
      - run: echo '${{toJson(github.event)}}'
      - run: echo '${{toJosn(github.ref)}}'