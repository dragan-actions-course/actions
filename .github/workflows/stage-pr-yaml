name: Deploy PR branches
on:
  issue_comment:
    types: [creted,opened]
   
  pull_request_target:
    types: [created,opened]


jobs:
  trigger-pr-branch-deploy:
    runs-on: ubuntu-latest
    permissions:
      pull-requests: write
    steps:
      - run: echo '${{toJson(github.event)}}'
      - run: echo '${{toJosn(github.ref)}}'